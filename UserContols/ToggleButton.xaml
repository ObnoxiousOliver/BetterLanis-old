<UserControl x:Class="BetterLanis.UserContols.ToggleButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BetterLanis.UserContols"
             mc:Ignorable="d" Height="16" Width="30" MinHeight="16" MinWidth="30">
    <Border x:Name="Slide" BorderBrush="{DynamicResource OutlineColor}" BorderThickness="1" Background="{DynamicResource ToggleButtonBackgroundColor}" CornerRadius="8" Margin="0" HorizontalAlignment="Center" VerticalAlignment="Center" Height="16" Width="30" MouseDown="Toggle">
        <Ellipse x:Name="Thumb" Fill="{DynamicResource ToggleButtonThumbColor}" Width="14" HorizontalAlignment="Left" Height="14">
            <Ellipse.Effect>
                <DropShadowEffect Direction="-90" ShadowDepth="0" RenderingBias="Quality" BlurRadius="10" Opacity="1"/>
            </Ellipse.Effect>
        </Ellipse>
    </Border>
</UserControl>